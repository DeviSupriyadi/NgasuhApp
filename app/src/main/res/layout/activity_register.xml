<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru"
    android:padding="@dimen/dm24"
    tools:context=".activity_register">

    <LinearLayout
        android:id="@+id/atase3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm16"
            android:src="@drawable/ic_child_friendly"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm5"
            android:gravity="center"
            android:text="@string/judul"
            android:textColor="@color/putih"
            android:textSize="@dimen/dm20"
    </LinearLayout>

</RelativeLayout>